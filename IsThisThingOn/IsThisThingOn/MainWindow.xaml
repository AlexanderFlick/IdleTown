<Window x:Class="IsThisThingOn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IsThisThingOn"
        mc:Ignorable="d"
        Title="Idle Town" Height="500" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Gather" HorizontalAlignment="Left" Margin="300,144,0,0" VerticalAlignment="Top" Height="27" Width="73" Click="GetWheat"/>
        <TextBlock Name="wheatText" HorizontalAlignment="Left" Margin="348,74,0,0" Text="Wheat: 0/10" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="wheatPrices" HorizontalAlignment="Left" Margin="358,95,0,0" Text="Price: $2" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Sell" HorizontalAlignment="Left" Margin="388,144,0,0" VerticalAlignment="Top" Height="27" Width="75" Click="SellWheat"/>
        <TextBlock Name="goldText" HorizontalAlignment="Left" Margin="347,27,0,0" Text="Gold Total: 0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="89" RenderTransformOrigin="-1.809,0.18"/>
        <Button Content="Hire Farmer" HorizontalAlignment="Left" Margin="215,283,0,0" VerticalAlignment="Top" Width="163" Click="HireFarmer" Height="27"/>
        <TextBlock Name="totalFarmer" HorizontalAlignment="Left" Margin="254,212,0,0" Text="Total Farmers: 0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="farmerGain" HorizontalAlignment="Left" Margin="258,233,0,0" Text="+1 Wheat/click" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="farmerCost" HorizontalAlignment="Left" Margin="236,254,0,0" Text="Gold To Hire Farmer: 20" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="wheatPerClick" HorizontalAlignment="Left" Margin="333,116,0,0" Text="Wheat Per Click: 1" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Buy Storage" HorizontalAlignment="Left" Margin="18,284,0,0" VerticalAlignment="Top" Width="163" Height="27" Click="BuyStorage"/>
        <TextBlock x:Name="storageTotal" HorizontalAlignment="Left" Margin="46,212,0,0" Text="Total Warehouses: 0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="storageIncrease" HorizontalAlignment="Left" Margin="55,233,0,0" Text="+25 Max Wheat" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="storageCost" HorizontalAlignment="Left" Margin="41,254,0,0" Text="Storage Gold Cost: 100" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Buy Market" HorizontalAlignment="Left" Margin="406,283,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.278,-0.299" Height="27" Width="162" Click="BuyMarket"/>
        <TextBlock Name="marketTotal" HorizontalAlignment="Left" Margin="444,212,0,0" Text="Total Markets: 0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="marketIncrease" HorizontalAlignment="Left" Margin="458,233,0,0" Text="x2 Per Sale" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="marketCost" HorizontalAlignment="Left" Margin="426,254,0,0" Text="Gold To Buy Market: 10" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="2.547,12.158"/>

    </Grid>
</Window>

<Window x:Class="IsThisThingOn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IsThisThingOn"
        mc:Ignorable="d"
        Title="Idle Town" Height="450" Width="800">
    <Grid>
        <Button Content="Gather" HorizontalAlignment="Left" Margin="25,158,0,0" VerticalAlignment="Top" Height="27" Width="75" Click="GetWheat"/>
        <TextBlock Name="wheatText" HorizontalAlignment="Left" Margin="100,115,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="wheatTitle" HorizontalAlignment="Left" Margin="78,93,0,0" Text="Wheat" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" Height="22"/>
        <TextBlock Name="wheatPrices" HorizontalAlignment="Left" Margin="78,137,0,0" Text="Price: $2" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Sell" HorizontalAlignment="Left" Margin="115,158,0,0" VerticalAlignment="Top" Height="27" Width="75" Click="SellWheat"/>
        <TextBlock Name="goldText" HorizontalAlignment="Left" Margin="324,39,0,0" Text="Gold Total: 0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="89"/>

    </Grid>
</Window>

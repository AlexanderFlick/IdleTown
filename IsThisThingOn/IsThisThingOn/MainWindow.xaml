<Window x:Class="IsThisThingOn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IsThisThingOn"
        mc:Ignorable="d"
        Title="Idle Town" Height="500" Width="800">
    <Grid>
        <Button Content="Gather" HorizontalAlignment="Left" Margin="63,127,0,0" VerticalAlignment="Top" Height="27" Width="73" Click="GetWheat"/>
        <TextBlock Name="wheatText" HorizontalAlignment="Left" Margin="114,57,0,0" Text="Wheat: 0/10" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="wheatPrices" HorizontalAlignment="Left" Margin="121,78,0,0" Text="Price: $2" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Sell" HorizontalAlignment="Left" Margin="151,127,0,0" VerticalAlignment="Top" Height="27" Width="75" Click="SellWheat"/>
        <TextBlock Name="goldText" HorizontalAlignment="Left" Margin="670,40,0,0" Text="Gold Total: 0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="89"/>
        <Button Content="Hire Farmer" HorizontalAlignment="Left" Margin="63,238,0,0" VerticalAlignment="Top" Width="163" Click="HireFarmer" Height="27"/>
        <TextBlock Name="totalFarmer" HorizontalAlignment="Left" Margin="102,167,0,0" Text="Total Farmers: 0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="farmerGain" HorizontalAlignment="Left" Margin="106,188,0,0" Text="+1 Wheat/click" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="farmerCost" HorizontalAlignment="Left" Margin="84,209,0,0" Text="Gold To Hire Farmer: 20" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="wheatPerClick" HorizontalAlignment="Left" Margin="96,99,0,0" Text="Wheat Per Click: 1" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Buy Storage" HorizontalAlignment="Left" Margin="63,352,0,0" VerticalAlignment="Top" Width="163" Height="27" Click="BuyStorage"/>
        <TextBlock x:Name="storageTotal" HorizontalAlignment="Left" Margin="91,280,0,0" Text="Total Warehouses: 0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="storageIncrease" HorizontalAlignment="Left" Margin="79,301,0,0" Text="+25 Max Wheat Storage" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="storageCost" HorizontalAlignment="Left" Margin="86,322,0,0" Text="Storage Gold Cost: 100" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>

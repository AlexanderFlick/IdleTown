<Window x:Class="IsThisThingOn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IsThisThingOn"
        mc:Ignorable="d"
        Title="Idle Town" Height="450" Width="800">
    <Grid>
        <Button Content="Gather" HorizontalAlignment="Left" Margin="25,158,0,0" VerticalAlignment="Top" Height="27" Width="75" Click="GetWheat"/>
        <TextBlock Name="wheatText" HorizontalAlignment="Left" Margin="78,88,0,0" Text="Wheat: 0/10" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="wheatPrices" HorizontalAlignment="Left" Margin="85,109,0,0" Text="Price: $2" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Sell" HorizontalAlignment="Left" Margin="115,158,0,0" VerticalAlignment="Top" Height="27" Width="75" Click="SellWheat"/>
        <TextBlock Name="goldText" HorizontalAlignment="Left" Margin="324,39,0,0" Text="Gold Total: 0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="89"/>
        <Button Content="Hire Farmer" HorizontalAlignment="Left" Margin="24,275,0,0" VerticalAlignment="Top" Width="166" Click="HireFarmer" Height="27"/>
        <TextBlock Name="totalFarmer" HorizontalAlignment="Left" Margin="66,204,0,0" Text="Total Farmers: 0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="farmerGain" HorizontalAlignment="Left" Margin="70,225,0,0" Text="+1 Wheat/click" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="farmerCost" HorizontalAlignment="Left" Margin="45,246,0,0" Text="Gold To Hire Farmer: 20" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="wheatPerClick" HorizontalAlignment="Left" Margin="60,130,0,0" Text="Wheat Per Click: 1" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
